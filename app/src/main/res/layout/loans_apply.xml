             <ImageView
                 android:id="@+id/cha"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentRight="true"
                 android:src="@drawable/cha"
                 android:layout_centerVertical="true"
                 />
      </RelativeLayout>
