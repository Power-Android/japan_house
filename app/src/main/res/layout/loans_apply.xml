    <EditText
        android:id="@+id/user_name"
        android:layout_below="@+id/ding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_border_bg"
        android:hint="@string/dialog_checkRoom_name"
        android:textSize="14sp"
        android:textColor="#999999"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:maxLines="1"
        />

    <EditText
        android:layout_below="@+id/user_name"
        android:id="@+id/user_tel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_border_bg"
        android:hint="@string/dialog_checkRoom_tel"
        android:textSize="14sp"
        android:textColor="#999999"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:maxLines="1"
        />
    <LinearLayout

        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/user_tel"
        android:id="@+id/liner2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:layout_marginTop="0.1dp"
            android:checked="true"
            android:id="@+id/check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#a2a2a2"
            android:buttonTint="@color/colorAccent"
            android:scaleX="0.8"
            android:scaleY="0.8"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tongyi"
            />
          <TextView
              android:id="@+id/xieyi"
              android:textColor="@color/colorAccent"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/xieyi"
              />
    </LinearLayout>
          <Button
              android:layout_below="@+id/liner2"
              android:id="@+id/tijiao"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/tijiao"
              android:background="@color/colorAccent"
              android:textColor="@color/white"
              />
</RelativeLayout>
