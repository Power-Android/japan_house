<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.example.administrator.japanhouse.fragment.home.ZufangActivity">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:background="@color/shihuangse"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dip">
                <ImageView
                    android:id="@+id/back_img"
                    android:src="@drawable/back"
                    android:padding="15dp"
                    android:layout_width="50dip"
                    android:layout_height="50dip" />
                <LinearLayout
                    android:background="@drawable/round_white"
                    android:layout_gravity="center_vertical"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="35dip">
                    <ImageView
                        android:layout_marginLeft="15dip"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/sousuo"
                        android:layout_width="15dip"
                        android:layout_height="15dip" />
                    <TextView
                        android:id="@+id/search_tv"
                        android:background="@null"
                        android:paddingLeft="10dip"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:textSize="13sp"
                        android:hint="挑好房，上F.L.C"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/img_dingwei"
                    android:src="@drawable/dituzhaofang"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="15dp"
                    android:layout_width="50dip"
                    android:layout_height="50dip" />
                <ImageView
                    android:id="@+id/img_message"
                    android:src="@drawable/message"
                    android:padding="15dp"
                    android:layout_width="50dip"
                    android:layout_height="50dip" />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/fenlei_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray1" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="租房研究所"
                    android:textColor="@color/text_black"
                    android:padding="15dp"/>
                <TextView
                    android:id="@+id/look_more_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/home_more_iv"
                    android:text="查看更多"
                    android:drawablePadding="5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:padding="15dp"/>
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/yanjiu_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingLeft="15dp"
                android:paddingRight="5dp"
                android:paddingBottom="15dp"/>
            <LinearLayout
                android:visibility="visible"
                android:id="@+id/not_shendeng_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/shendeng_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="神灯找房，请填写您的找房需求"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/textview_yellow"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:background="@color/gray1" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/already_shendeng_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="神灯找房"
                        android:textColor="@color/text_black"
                        android:padding="15dp"/>
                    <TextView
                        android:id="@+id/shendeng_more_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableRight="@drawable/home_more_iv"
                        android:text="查看更多"
                        android:drawablePadding="5dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:padding="15dp"/>
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/shendeng_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingLeft="10dp"
                    android:paddingBottom="15dp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <TextView
                    android:id="@+id/view_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="今日推荐"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:textColor="@color/text_black"
                    android:textSize="16sp"
                    android:layout_centerInParent="true"/>
                <View
                    android:layout_width="40dp"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_toLeftOf="@+id/view_12"
                    android:layout_centerVertical="true"/>
                <View
                    android:layout_width="40dp"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimary"
                    android:layout_toRightOf="@+id/view_12"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/tuijian_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
