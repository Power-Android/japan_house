<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.japanhouse.fragment.home.ui.activity.DaikuanDetilsActivity">
    <RelativeLayout
        android:id="@+id/liner"
        android:background="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="15dp"
            android:layout_centerVertical="true"
            android:id="@+id/img_beak"
            android:src="@drawable/img_beak"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="贷款详情"
            android:layout_centerInParent="true"
            android:textSize="16sp"
            android:textColor="@color/white"
            />
    </RelativeLayout>
    <View
        android:id="@+id/xian"
        android:layout_below="@+id/liner"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/gray1"/>

    <TextView
        android:id="@+id/dai_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="贷款名称"
        android:textSize="18sp"
        android:layout_margin="10dp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray1"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/yuexi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="月息0.59%"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_margin="10dp"
                />
            <TextView
                android:layout_below="@+id/yuexi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="贷款利率"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                />
        </RelativeLayout>
        <View
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_width="1dp"
            android:layout_weight="0.01"
            android:layout_height="50dp"
            android:background="@color/gray1"/>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/zuigao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最高200万"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_margin="10dp"
                />
            <TextView
                android:layout_below="@+id/zuigao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="范围额度"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                />
        </RelativeLayout>
        <View
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_width="1dp"
            android:layout_weight="0.01"
            android:layout_height="50dp"
            android:background="@color/gray1"/>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/nianxian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1-36年"
                android:textSize="16sp"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_margin="10dp"
                />
            <TextView
                android:layout_below="@+id/nianxian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最高年限"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                />
        </RelativeLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray1"/>

    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="放款方式："
            />
        <TextView
            android:textSize="16sp"
            android:id="@+id/qixian"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3天内"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="还款时间："
            />
        <TextView
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="随借随还"
            />
    </LinearLayout>

</LinearLayout>
